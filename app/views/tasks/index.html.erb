<div class="tasks index-page">
  <h1 class="display-4">Listing Tasks</h1>
  <div class="card bg-gray">
    <div class="card-body pb-2">
      <div class="tasks-container">
        <% @tasks.each do |task| %>
          <div class="task-container">
            <div class="task-info">
              <div class="task-title">
			  <hr>
                <%= task.name %>
                <span class="task-category">
                  <%= task.category.name %>
                </span>
              </div>
              <div class="task-description">
                <%= task.description %>
              </div>
              <div class="task-dates">
                <b><%= task.owner.email %></b>
                <%= "created at  #{l task.created_at, format: :long}" %>
              </div>
            </div>
            <div class="task-interactions">
              <div class="task-participants"></div>
              <div class="task-actions">
                <%= link_to "Show", task, class: 'btn btn-outline-info' %>
                <%= link_to "Edit", edit_task_path(task), class: 'btn btn-outline-warning' %>
                <%= link_to "Delete", task, 'data-turbo-method': :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-outline-danger' %>
              </div>
            </div>
          </div>
        <% end %>
		<hr>
        <%= link_to "Add new", new_task_path, class: 'btn btn-dark' %>
      </div>
    </div>
  </div>
</div>