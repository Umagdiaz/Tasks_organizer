.nested-fields
  %hr
  .text-right
  .row
    .col-4
      = f.input :user_id, label: 'User', as: :select, collection: User.all, label_method: -> (u) { u.email }, input_html: { class: 'selectize responsible' }
    .col-4
      = f.input :role, label: 'Rol', as: :select, collection: Participant.roles, value_method: -> (r) { r[1] }, input_html: { class: 'selectize role' }
    .col-4.text-left
      .mt-2
      = link_to_remove_association f, class: 'btn btn-outline-warning btn-sm btn-flat mt-4' do
        .fas.fa-trash