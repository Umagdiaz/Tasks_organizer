<div class="tasks show-page">
  <h1 class="display-4 mt-3 mb-3">Tasks <span class="small"></span></h1>
  <h2>Info</h2>
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Category</th>
              <th>Maker</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
              <td><%= @task.name %></td>
              <td><%= @task.category.name %></td>
              <td><%= @task.owner.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="font-weight-light"><%= @task.description %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="task-participants">
        <div class="task-participants-header font-weight-bold text-uppercase">Participants</div>
         
      </div>

      <div>
        <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-outline-warning"  %>
        <%= link_to 'Back', tasks_path, class: "btn btn-secondary" %>
      </div>

  
  <h2 class="mt-2 mb-2">Notes</h2>
  <div class="notes-container">
      <div class="notes">
        <% @task.notes.each do |note| %>
        <div class="note-element">
          <%= render 'tasks/notes/note', note: note %>
        </div>
          <% end %>
        </div>
      
        <div class="notes"></div>
          <%= simple_form_for Note.new, url: task_notes_path(task_id: @task.id), remote: true do |form| %>
          <%= form.input :body, label: false, as: :string, placeholder: 'write your note...', input_html: { autocomplete: :off } %>
          <% end %>
        </div>

    </div>
  </div>
</div>




