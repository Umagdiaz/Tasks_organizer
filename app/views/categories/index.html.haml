.categories.index-page
  .card
    .card-body
      %h2 Listing categories
      %table.table
        %thead
          %tr
            %th Name
            %th Description
            %th
            %th
            %th

        %tbody
          - @categories.each do |category|
            %tr
              %td= category.name
              %td= category.description
              %td= link_to 'Show', category, class: "btn btn-outline-info"
              %td= link_to 'Edit', edit_category_path(category), class: "btn btn-outline-warning"
              %td= link_to 'Destroy', category, 'data-turbo-method': :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-outline-danger"

      %br

      = link_to 'New', new_category_path, class: "btn btn-dark"
